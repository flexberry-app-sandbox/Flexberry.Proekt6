<h3 class="ui header">{{t "forms.i-i-s-proekt-т-ч-смета-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимСтроРаб
      class=(if (v-get validationModel "стоимСтроРаб" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-т-ч-смета-e.стоимСтроРаб-caption")
      data-test-i-i-s-proekt-т-ч-смета-e-стоимСтроРаб=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимСтроРаб" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимМонРаб
      class=(if (v-get validationModel "стоимМонРаб" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-т-ч-смета-e.стоимМонРаб-caption")
      data-test-i-i-s-proekt-т-ч-смета-e-стоимМонРаб=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимМонРаб" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.стоимОборуд
      class=(if (v-get validationModel "стоимОборуд" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-т-ч-смета-e.стоимОборуд-caption")
      data-test-i-i-s-proekt-т-ч-смета-e-стоимОборуд=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "стоимОборуд" "message")}}
  </div>
</form>

<h3 class="ui header">{{t "forms.i-i-s-proekt-док-смета-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номСметРасч
      class=(if (v-get validationModel "номСметРасч" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-док-смета-e.номСметРасч-caption")
      data-test-i-i-s-proekt-док-смета-e-номСметРасч=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номСметРасч" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.количество
      class=(if (v-get validationModel "количество" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-док-смета-e.количество-caption")
      data-test-i-i-s-proekt-док-смета-e-количество=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "количество" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.ценаЗаЕд
      class=(if (v-get validationModel "ценаЗаЕд" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-док-смета-e.ценаЗаЕд-caption")
      data-test-i-i-s-proekt-док-смета-e-ценаЗаЕд=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ценаЗаЕд" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.общСметСтои
      class=(if (v-get validationModel "общСметСтои" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-док-смета-e.общСметСтои-caption")
      data-test-i-i-s-proekt-док-смета-e-общСметСтои=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "общСметСтои" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-док-смета-e.объектСМР-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.объектСМР
      relationName="объектСМР"
      projection="ОбъектСМРL"
      title=(t "forms.i-i-s-proekt-док-смета-e.объектСМР-caption")
      readonly=readonly
      componentName="объектСМРLookup"
      class=(if (v-get validationModel "объектСМР" "isInvalid") "error")
      data-test-i-i-s-proekt-док-смета-e-объектСМР=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "объектСМР" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.объектСМР.объектСтроит
      class=(if (v-get validationModel.объектСМР "объектСтроит" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-док-смета-e.объектСМР.объектСтроит-caption")
      data-test-i-i-s-proekt-док-смета-e-объектСМР-объектСтроит=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.объектСМР "объектСтроит" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-док-смета-e.тЧСмета-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧСметаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧСмета
      content=model.тЧСмета
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧСмета" "isInvalid") "error")
      data-test-i-i-s-proekt-док-смета-e-тЧСмета=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧСмета" "message")}}
  </div>
</form>
